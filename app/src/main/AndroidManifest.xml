<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher_melodosis"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_melodosis_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Proyectoapi"
        tools:targetApi="31">
        <activity
            android:name="com.example.robertosanchez.proyectoapi.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Proyectoapi">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

    <!-- Configuración de Firebase -->
    <meta-data
        android:name="com.google.firebase.auth.api.gms.core.api_key"
        android:value="@string/default_web_client_id" />
    <!-- Configuración de Google Sign-In -->
    <meta-data
        android:name="com.google.android.gms.auth.api.credentials.CLIENT_ID"
        android:value="@string/default_web_client_id" />

</manifest>